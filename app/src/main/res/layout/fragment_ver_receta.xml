<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="recetasVM" type="com.application.app.modules.recetas.data.viewmodel.RecetasVM"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnmask"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">

        <LinearLayout android:gravity="start"
            android:id="@+id/linearRecetas"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="502dp">

                <LinearLayout
                    android:id="@+id/linearRecetasVer"
                    style="@style/groupStylewhite_A700"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/txtH"
                        style="@style/txt_1"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_101pxh"
                        android:layout_marginTop="@dimen/_42pxv"
                        android:layout_marginEnd="@dimen/_101pxh"
                        android:layout_marginBottom="@dimen/_21pxv"
                        android:ellipsize="end"

                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:singleLine="false"
                        android:text="@{recetasVM.recetasModel.txtH5}"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        tools:text="@string/lbl_recetas2" />

                    <TextView
                        android:id="@+id/txtDescription2"
                        style="@style/txtRobotoromanregular15_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_37pxh"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:layout_marginEnd="@dimen/_37pxh"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        tools:text="@string/msg_se_desperdician" />

                    <TextView
                        android:id="@+id/txtDescription3"
                        style="@style/txtRobotoromanregular15_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_37pxh"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:layout_marginEnd="@dimen/_37pxh"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_1pxh" />
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>
</layout>
