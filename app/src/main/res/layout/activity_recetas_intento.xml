<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="recetasVM" type="com.application.app.modules.recetas.data.viewmodel.RecetasVM"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnmask"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">

        <LinearLayout android:gravity="start"
            android:id="@+id/linearRecetas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="vertical" style="@style/groupStylewhite_A700">


            <FrameLayout
                android:id="@+id/frameStackbamxlogotwo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70pxv"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10pxv">

                <ImageView
                    android:id="@+id/imageBamxlogoTwo"
                    imageRes="@{@drawable/img_bamxlogo2_20}"
                    android:layout_width="@dimen/_62pxh"
                    android:layout_height="@dimen/_64pxh"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_bamxlogo2_20" />

                <FrameLayout
                    android:id="@+id/frameStackarrowleft"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70pxv"
                    android:layout_gravity="start">

                    <LinearLayout
                        android:id="@+id/linearRowarrowleft"

                        style="@style/groupStylebluegray_801"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageArrowleft"
                            android:layout_width="@dimen/_26pxh"
                            android:layout_height="@dimen/_22pxh"
                            android:layout_marginStart="@dimen/_24pxh"
                            android:layout_marginTop="@dimen/_16pxv"
                            android:layout_marginBottom="@dimen/_16pxv"
                            android:onClick="regresar"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_arrowleft_white_a700"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_arrowleft_white_a700" />

                        <ImageView
                            android:id="@+id/imageSearch"
                            android:layout_width="@dimen/_25pxh"
                            android:layout_height="@dimen/_25pxh"
                            android:layout_marginStart="@dimen/_13pxh"
                            android:layout_marginTop="@dimen/_16pxv"
                            android:layout_marginEnd="@dimen/_320pxh"
                            android:layout_marginBottom="@dimen/_15pxv"
                            android:onClick="buscar"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_search_white_a700"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_search_white_a700" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageBamxlogoTwoOne"
                        imageRes="@{@drawable/img_bamxlogo2_21}"
                        android:layout_width="@dimen/_62pxh"
                        android:layout_height="@dimen/_64pxh"
                        android:layout_gravity="bottom|end"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_bamxlogo2_21" />
                </FrameLayout>


                <LinearLayout
                    android:id="@+id/linearColumn"
                    style="@style/groupStylewhite_A700"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:orientation="vertical">


                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="200dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewRecetas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <ImageView
                    android:id="@+id/imageEllipseFive"
                    imageRes="@{@drawable/img_ellipse5}"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="start"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_ellipse5" />

                <TextView
                    android:id="@+id/txtH8"
                    style="@style/txtRobotoromanextrabold25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="37dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="RECETAS"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp" />
            </FrameLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameBottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/linear2FourupAO"
                style="@style/groupStylebluegray_802"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear1Tab"
                    style="@style/groupStylebluegray_800"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="goHome"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageHome"
                        android:layout_width="@dimen/_30pxh"
                        android:layout_height="@dimen/_21pxh"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_home"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_home" />

                    <TextView
                        android:id="@+id/txtCaption"
                        style="@style/txtRobotoregular12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginEnd="@dimen/_2pxh"
                        android:layout_marginBottom="@dimen/_11pxv"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="@dimen/_1pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_men"
                        tools:text="@string/lbl_men" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearColumnvolume"
                    style="@style/groupStylebluegray_800"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="info"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear3Tab"
                        style="@style/groupStylebluegray_800"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageVolume"
                            android:layout_width="@dimen/_20pxh"
                            android:layout_height="@dimen/_20pxh"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_9pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_volume"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_volume" />

                        <TextView
                            android:id="@+id/txtCaptionOne"
                            style="@style/txtRobotoregular12_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_3pxv"
                            android:layout_marginEnd="@dimen/_2pxh"
                            android:layout_marginBottom="@dimen/_8pxv"
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:letterSpacing="0.02"
                            android:lineSpacingExtra="@dimen/_1pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_information"
                            tools:text="@string/lbl_information" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</layout>
